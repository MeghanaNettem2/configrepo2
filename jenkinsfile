node 
{
 checkout scm;
  def mvnHome
  
   def url =readProperties  file: 'propfolder/properties.txt'
   stage('checkout') 
   { 
   
   echo "${url}"
   def Var1= url.APP_GIT_URL
   echo "Var1=${Var1}"
   git "${Var1}"
   mvnHome = tool 'MAVEN_HOME'
   }
   stage('Build')
   {
   def Var2= url.APP_BUILD
   echo "${Var2}"
     sh "${Var2}"
   }
  stage('input'){
input message:'skip tomcat installation ?',ok:'yes'
  }
  stage('sample')
 {
 echo "sdfghjk"
 }
}
